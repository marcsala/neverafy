{
  "version": 2,
  "functions": {
    "src/server.ts": { "maxDuration": 30 },
    "src/api/webhooks/bizum.ts": { "maxDuration": 30 },
    "src/api/cron/*.ts": { "maxDuration": 300 }
  },
  "routes": [
    { "src": "/(.*)", "dest": "src/server.ts" }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-alerts",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/urgent-check", 
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "0 10 * * 0"
    },
    {
      "path": "/api/cron/subscription-management",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/smart-engagement",
      "schedule": "0 15 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/webhooks/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CRON_SECRET": "neverafy-cron-2024"
  }
}
